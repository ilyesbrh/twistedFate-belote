{
  "name": "@belote/ui",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "PixiJS mobile-first rendering layer",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "build": "tsc --build",
    "storybook": "storybook dev -p 6006 --config-dir .storybook",
    "storybook:build": "storybook build --config-dir .storybook -o storybook-static",
    "visual-review": "npx playwright test"
  },
  "dependencies": {
    "@belote/animation": "workspace:*",
    "@belote/app": "workspace:*",
    "@belote/core": "workspace:*",
    "@pixi/layout": "^3.2.0",
    "@pixi/react": "^8.0.5",
    "@pixi/ui": "^2.3.2",
    "pixi-filters": "^6.1.5",
    "pixi.js": "^8.16.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@storybook/react": "~8.6.17",
    "@storybook/react-vite": "~8.6.17",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "serve": "^14.2.5",
    "storybook": "~8.6.0",
    "vite": "^7.0.0"
  }
}
