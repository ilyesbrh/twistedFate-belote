{
  "name": "twisted-fate-belote",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "description": "Mobile-first Belote card game",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --build",
    "build": "pnpm -r --filter './packages/*' run build",
    "screenshot": "node scripts/screenshot.mjs",
    "screenshot:landscape": "node scripts/screenshot.mjs landscape 844 390",
    "screenshot:portrait": "node scripts/screenshot.mjs portrait 390 844"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.0",
    "playwright": "^1.58.2",
    "prettier": "^3.8.0",
    "typescript": "^5.9.0",
    "typescript-eslint": "^8.56.0",
    "vitest": "^4.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
